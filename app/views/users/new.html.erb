<div class="container mt-4">
  <div class="card text-bg-light mb-3 mx-auto" style="max-width: 24rem;">
    <div class="card-header">Crear Usuario</div>
    <div class="card-body">
      
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5>Errores al crear nuevo usuario:</h5>
          <ul>
            <% @user.errors.full_messages.each do |usr| %>
              <li><%= usr %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @user, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :firstname, "Nombre" %>
          <%= form.text_field :firstname, placeholder: "Escribe aquí tu nombre", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Password" %>
          <%= form.password_field :password, placeholder: "Escribe aquí tu password", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :mail, "Email" %>
          <%= form.email_field :mail, placeholder: "Escribe aquí tu email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :username, "Username" %>
          <%= form.text_field :username, placeholder: "Escribe aquí tu username", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :sex, "Sexo" %>
          <%= form.text_field :sex, placeholder: "Indica tu sexo", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :user_image, "Imagen" %>
          <%= form.text_field :user_image, placeholder: "URL de imagen", class: "form-control" %>
        </div>

        <div>
        <%= date_create: Date.today %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit "Guardar", class: "btn btn-primary btn-sm", id: "liveAlertBtn" %>
          <%= link_to 'Volver', users_path, class: "btn btn-secondary btn-sm" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
